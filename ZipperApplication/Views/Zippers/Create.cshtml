@model ZipperApplication.Models.Zipper

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Zipper</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Zipper Type</label>
                <select asp-for="Type" class="form-control">
                    <option value="Metal">Metal</option>
                    <option value="Coil">Coil</option>
                    <option value="Molded Plastic">Molded Plastic</option>
                    <option value="Invisible">Invisible</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label">Length (Inches)</label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control">
                    <option value="1">#1</option>
                    <option value="2">#2</option>
                    <option value="3">#3</option>
                    <option value="4">#4</option>
                    <option value="5">#5</option>
                    <option value="6">#6</option>
                    <option value="7">#7</option>
                    <option value="8">#8</option>
                    <option value="9">#9</option>
                    <option value="10">#10</option>
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TapeColour" class="control-label">Tape Colour</label>
                <input asp-for="TapeColour" class="form-control" />
                <span asp-validation-for="TapeColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Closure" class="control-label">Closure Type</label>
                <select asp-for="Closure" class="form-control">
                    <option value="Closed Bottom">Closed Bottom</option>
                    <option value="Separating">Separating</option>
                </select>
                <span asp-validation-for="Closure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label">Rating (1-5)</label>
                <p id="range-holder"><span>1&nbsp;</span><input type="range" min="1" max="5" value="5" asp-for="Rating" class="form-control" id="range-input" /><span>&nbsp;5</span></p>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
